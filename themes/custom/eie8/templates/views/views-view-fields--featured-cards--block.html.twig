<div {{ attributes.setAttribute('id', 'taxonomy-term-' ~ tid) }} data-url="{{ url }}" class="card">
  {% if category_image|render is not empty %}
    <img class="card-img-top" src="{{category_image}}">
  {% endif %}
    </img>
