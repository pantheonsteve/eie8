{#
/**
 * @file
 * Template for the main page.
 */
#}
<div class="page">
  {% include '@eie_radix/eie/mos_branding.twig'  %}

  {% embed '@eie_radix/navbar/navbar.twig' with {
    placement: 'default',
    container: 'fixed',
    color: 'light',
  } %}

    {% block branding %}
      {% if page.navbar_branding %}
        {{ page.navbar_branding }}
      {% endif %}
    {% endblock %}

    {% block secondary %}
      {% if page.navbar_secondary %}
        <div class="mr-auto">
          {{ page.navbar_secondary }}
        </div>
      {% endif %}
    {% endblock %}

    {% block search %}
      {% if page.navbar_search %}
        <div class="mr-auto">
          {{ page.navbar_search }}
        </div>
      {% endif %}
    {% endblock %}

    {% block main %}
      {% if page.navbar_main %}
        {{ page.navbar_main }}
      {% endif %}
    {% endblock %}
  {% endembed %}

  <main class="pt-5 pb-5">
    {% if page.header %}
      <header class="page__header mb-3">
        <div class="container">
          {{ page.header }}
        </div>
      </header>
    {% endif %}

    {% if page.content %}
      <div class="page__content">
        <div class="container">
          {{ page.content }}
        </div>
      </div>
    {% endif %}
  </main>

  {% if page.footer %}
    <footer class="page__footer">
      <div class="container">
        <div class="d-flex justify-content-md-between align-items-md-center">
          {{ page.footer }}
        </div>
      </div>
    </footer>
  {% endif %}
</div>
